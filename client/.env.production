# Production Environment Variables for Hire Accel Client
# Domain: hireaccel.v-accel.ai

# API Configuration
VITE_API_URL=https://hireaccel.v-accel.ai/api
VITE_API_BASE_URL=https://hireaccel.v-accel.ai/api

# Application Configuration
VITE_APP_NAME=Hire Accel
VITE_APP_DESCRIPTION=Complete Hiring Acceleration Platform
VITE_APP_VERSION=1.0.0

# Environment
NODE_ENV=production
VITE_NODE_ENV=production

# Domain Configuration
VITE_DOMAIN=hireaccel.v-accel.ai
VITE_APP_URL=https://hireaccel.v-accel.ai

# Security Configuration
VITE_SECURE_COOKIES=true
VITE_ENABLE_HTTPS=true

# Features Configuration
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# UI Configuration
VITE_THEME=light
VITE_DEFAULT_LANGUAGE=en
VITE_TIMEZONE=UTC

# Performance Configuration
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false

# External Services (if needed)
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# VITE_SENTRY_DSN=your-sentry-dsn-here

# Build Configuration
GENERATE_SOURCEMAP=false
VITE_BUILD_ANALYZE=false

# WebSocket Configuration (if using real-time features)
VITE_WS_URL=wss://hireaccel.v-accel.ai/ws

# OAuth Configuration (if implementing social login)
# VITE_GOOGLE_CLIENT_ID=your-google-client-id
# VITE_LINKEDIN_CLIENT_ID=your-linkedin-client-id

# CDN Configuration (if using external CDN)
# VITE_CDN_URL=https://cdn.v-accel.ai

# Support Configuration
VITE_SUPPORT_EMAIL=support@v-accel.ai
VITE_COMPANY_NAME=V-Accel Solutions
